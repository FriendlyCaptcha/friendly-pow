{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "ESNext",
      "target": "ES2019",
      "lib": ["DOM", "ESNext"],
      "strict": true,
      "moduleResolution": "node",
      "inlineSourceMap": true,
      "inlineSources": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "declaration": true,
    },
    "include": [
      "./node_modules/assemblyscript/std/assembly/**/*.ts",
      "./src/**/*",
    ],
    "exclude": [
      "node_modules/",
      "dist/",
      "./src/blake2b/blake2b64.ts",
      "./src/entryWasm.ts",
      "./src/solverWasm.ts",
      "./test/**/*.astest.ts",
      "./test/as-pect.d.ts",
    ]
  }
  